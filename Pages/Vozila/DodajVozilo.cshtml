@page
@model Auto_Servis.Pages.Vozila.DodajVoziloModel
@{
}
<h1>Upis Vozila</h1>
@if (Model.errorMessage.Length > 0)
{
    <div class="alert alert-warning alert-dismissible fade show " role="alert">
        <strong>@Model.errorMessage</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<form method="post">
    <label for="Broj_šasije">Broj šasije:</label><br>
    <input type="text" id="Broj_šasije" name="Broj_šasije"><br/>
    <label for="Registarska_oznaka">Registracijska oznaka:</label><br>
    <input type="text" id="Registarska_oznaka" name="Registarska_oznaka"><br/>
    <label for="Naziv">Naziv(Model):</label><br>
    <input type="text" id="Naziv" name="Naziv"><br/>
    <label for="Boja">Boja:</label><br>
    <input type="text" id="Boja" name="Boja"><br/>
    <label for="OIB_vlasnika">OIB vlasnika:</label><br>
    <input type="text" id="OIB_vlasnika" name="OIB_vlasnika"><br/><br/>

    @if (Model.successMessage.Length > 0)
    {
        <div class="alert alert-success alert-dismissible fade show " role="alert">
            <strong>@Model.successMessage</strong>
             <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <input type="submit" value="Submit">
</form>
