@page
@model Auto_Servis.Pages.Racuni.UnosRacunaModel
@{
}
<h1>Unos racuna</h1>

@if (Model.errorMessage.Length > 0)
{
    <div class="alert alert-warning alert-dismissible fade show " role="alert">
        <strong>@Model.errorMessage</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<form method="post">
    <label for="Šifra_racuna">Šifra računa:</label><br>
    <input type="text" id="Šifra_racuna" name="Šifra_racuna"><br/>

    <label for="Naziv">Naziv računa:</label><br>
    <input type="text" id="Naziv" name="Naziv"><br/>
    
    <label for="Opis">Opis:</label><br>
    <textarea id="Opis" name="Opis" rows="5" cols="50" maxlength="255" placeholder="Opis računa"></textarea><br/>
    
    <label for="Materijal">Korišteni materijal i dijelovi:</label><br>
    <textarea id="Materijal" name="Materijal" rows="5" cols="50" maxlength="255" placeholder="Koristeni materijal"></textarea><br/>
    
    <label for="Cijena_materijala">Cijena dijelova i materijal:</label><br>
    <input type="text" id="Cijena_materijala" name="Cijena_materijala"><br/>
    
    <label for="pdv">PDV(%):</label><br>
    <input type="text" id="pdv" name="pdv"><br/>
    
    <label for="OIB_vlasnika">OIB vlasnika:</label><br>
    <input type="text" id="OIB_vlasnika" name="OIB_vlasnika"><br/>
    
    <input type="submit" value="Submit">
</form>