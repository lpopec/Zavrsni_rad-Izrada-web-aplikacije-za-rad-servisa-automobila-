@page
@model Auto_Servis.Pages.Zaposlenici.PregledZaposlenikaModel
@{
}

<h1>Pregled vlasnika vozila</h1>
<br/>
<a class="btn btn-primary btn-sm" href="/Zaposlenici/UpisZaposlenika">Dodavanje novog zaposlenika</a><br/>
<br />
<table>
    <thead>
        <th style="display:none;">ID</th >
        <th>OIB zaposlenika</th>
        <th>Ime</th>
        <th>Prezime</th>
        <th>Broj telefona</th>
        <th>Adresa</th>
        <th>Email</th>
    </thead>
    <tbody>
    @foreach (var zaposlenik in Model.ListaZaposlenika)
    {
        <tr>
            <td style="display:none;">@zaposlenik.ID</td>
            <td>@zaposlenik.OIB_zaposlenika</td>
            <td>@zaposlenik.Ime</td>
            <td>@zaposlenik.Prezime</td>
            <td>@zaposlenik.Broj_telefona</td>
            <td>@zaposlenik.Adresa</td>
            <td>@zaposlenik.Email</td>
            <td>
                <a class="btn btn-primary btn-sm" href="/Zaposlenici/UrediZaposlenika?id=@zaposlenik.ID">Uredi</a>
                <a class="btn btn-primary btn-sm" href="/Zaposlenici/ObrišiZaposlenika?id=@zaposlenik.ID">Obriši</a>
            </td>
        </tr>
    }
    </tbody>
</table>