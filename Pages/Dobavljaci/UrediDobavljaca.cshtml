@page
@model Auto_Servis.Pages.Dobavljaci.UrediDobavljacaModel
@{
}
<h1>Uredi dobavljača</h1>

@if (Model.errorMessage.Length > 0)
{
    <div class="alert alert-warning alert-dismissible fade show " role="alert">
        <strong>@Model.errorMessage</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<form method="post">
    <input type="hidden" name="ID" id="ID" value="@Model.infoDobavljaca.ID" />

    <label for="Šifra_dobavljaca">Šifra dobavljača:</label><br>
    <input type="text" id="Šifra_dobavljaca" name="Šifra_dobavljaca" value="@Model.infoDobavljaca.Šifra_dobavljača"><br/>

    <label for="Naziv_dobavljaca">Naziv dobavljača:</label><br>
    <input type="text" id="Naziv_dobavljaca" name="Naziv_dobavljaca"value="@Model.infoDobavljaca.Naziv"><br/>

    <label for="Broj_telefona">Broj telefona:</label><br>
    <input type="text" id="Broj_telefona" name="Broj_telefona"value="@Model.infoDobavljaca.Broj_telefona"><br/>

    <label for="Adresa">Adresa:</label><br>
    <input type="text" id="Adresa" name="Adresa" value="@Model.infoDobavljaca.Adresa"><br/>

    <label for="Web_stranica">Web_stranica:</label><br>
    <input type="Web_stranica" id="Adresa" name="Web_stranica" value="@Model.infoDobavljaca.Web_stranica"><br/><br/>

    <input type="submit" value="Submit">
</form>